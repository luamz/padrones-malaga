<div class="col-md-8 mx-auto">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-8"><h1>Residencias</h1></div>
  </div>


  <% if @residencias.present? %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Calle</th>
        <th class="text-center">Numero</th>
        <th class="text-center">Piso</th>
        <th class="text-center">Departamento</th>
        <th class="text-center">AÃ±o</th>
        <th class="text-center">Distrito</th>
      </tr>
      </thead>

      <tbody>
      <% @residencias.each do |residencia| %>
        <tr>
          <td class="col-md-4"><%= link_to "#{residencia.nombre}", residencia.registro.nombre_calle.calle %></td>
          <td class="col-md-1 text-center"><%= residencia.numero %></td>
          <td class="text-center"><%= residencia.piso %></td>
          <td class="text-center"><%= residencia.dpto %></td>
          <td class="text-center"><%= residencia.ano %></td>
          <td class="col-md-1 text-center"><%= residencia.nombre_distrito %></td>
          <td class="col-md-2 text-center">
            <%= link_to residencia, class: 'btn btn-success btn-xs text-white' do %>
              <i class="fa fa-eye"></i>
              Ver
            <% end %>
          </td>
          <td class="col-md-2 text-center">
            <%= link_to edit_residencia_path(residencia), class: 'btn btn-primary btn-xs text-white' do %>
              <i class="fa fa-pencil"></i>
              Editar
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    Ninguna residencia encontrada
  <% end %>
</div>

