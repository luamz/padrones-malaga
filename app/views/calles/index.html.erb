<p id="notice"><%= notice %></p>

<h1>Calles</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Barrio</th>
      <th>Nombre Principal</th>
      <th>Outros Nombres</th>
    </tr>
  </thead>


  <tbody>
    <% @calles.each do |calle| %>
      <tr>
        <td class="col-md-2"><%= calle.barrio.nombre_barrio %></td>
        <td class="col-md-2"><%= link_to "#{calle.nombre_principal}", calle %></td>
        <td class="col-md-4"><%= calle.otros_nombres %></td>
        <td class="col-md-4"><%= link_to 'Agregar Nuevo Nombre', new_nombre_calle_path(calle) %></td>
        <td class="col-md-2">
          <%= link_to edit_calle_path(calle) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td class="col-md-2">
          <%= link_to calle, method: :delete, data: { confirm: 'Â¿Estas seguro?' } do %>
            <i class="fa fa-trash-can"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Calle', new_calle_path, class:'btn btn-primary text-white xp-2' %>
<%= link_to 'Nuevo Barrio', new_barrio_path, class:'btn btn-secondary text-white' %>
