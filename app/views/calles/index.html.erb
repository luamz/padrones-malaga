<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8"><h1>Calles</h1></div>
  <div class="col-md-4 mt-2 row">
    <div class="col-md-5"><%= link_to 'Nueva Calle', new_nombre_calle_path, class:'btn btn-success text-white' %></div>
    <div class="col-md-5"><%= link_to 'Nuevo Barrio', new_barrio_path, class:'btn btn-primary text-white' %></div>
  </div>

</div>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Barrio</th>
      <th>Nombre Principal</th>
      <th>Outros Nombres</th>
    </tr>
  </thead>


  <tbody>
    <% @calles.each do |calle| %>
      <tr>
        <td class="col-md-2"><%= calle.barrio.nombre_barrio %></td>
        <td class="col-md-2"><%= link_to "#{calle.principal}", calle %></td>
        <td class="col-md-4"><%= calle.otros_nombres %></td>
        <td class="col-md-2">
          <%= link_to new_nombre_calle_nombre_calles_path(calle), class: 'btn btn-dark btn-xs text-white' do %>
            <i class="fa fa-plus"></i>
            Agregar Nuevo Nombre
          <% end %>
        </td>
        <td class="col-md-1">
          <%= link_to edit_calle_path(calle), class: 'btn btn-primary btn-xs text-white' do %>
            <i class="fa fa-pencil"></i>
            Editar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @calles %>
<br>

