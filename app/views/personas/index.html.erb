<p id="notice"><%= notice %></p>

<h1>Personas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido1</th>
      <th>Apellido2</th>
      <th>Nacimiento</th>
      <th>Ciudad nacimiento</th>
      <th>Confirmacion nacimiento</th>
      <th>Defuncion</th>
      <th>Ciudad defuncion</th>
      <th>Confirmacion defuncion</th>
      <th>Bautismo</th>
      <th>Parroquia</th>
      <th>Confirmacion bautismo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido1 %></td>
        <td><%= persona.apellido2 %></td>
        <td><%= persona.nacimiento %></td>
        <td><%= persona.ciudad_nacimiento %></td>
        <td><%= persona.confirmacion_nacimiento %></td>
        <td><%= persona.defuncion %></td>
        <td><%= persona.ciudad_defuncion %></td>
        <td><%= persona.confirmacion_defuncion %></td>
        <td><%= persona.bautismo %></td>
        <td><%= persona.parroquia %></td>
        <td><%= persona.confirmacion_bautismo %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

